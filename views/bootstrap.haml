!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
    %title Chitter
    / Bootstrap
    %link{href: "css/bootstrap.min.css", rel: "stylesheet"}/
    %link{href: "css/my_styles.css", rel: "stylesheet"}/
    %link{href: "https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css", rel: "stylesheet"}/
    / HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries
    / WARNING: Respond.js doesn't work if you view the page via file://
    /[if lt IE 9]
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
  %body
    .navbar.navbar-inverse.navbar-fixed-top{:role => "navigation"}
      .container
        .row
          .col-md-offset-3.col-md-6
            .navbar-header
              .navbar-brand Chitter
              %i.fa.fa-user.chitter-icon
    .container
      .row
        .col-md-offset-3.col-md-6.tweet-body
          .starter-template
            .row
              .col-md-8
                .input-group
                  %input.form-control{placeholder: "Search for...", type: "text"}
                / /input-group
              / /.col-md-4
              .col-md-4
                .input-group
                  %input.form-control{:placeholder => "How many?", :type => "text"}/
                  %span.input-group-btn
                    %button.btn.btn-default{:type => "button"} Go!
                / /input-group
              / /.col-lg-6
            / /.row 
            %br/
            = yield
    / /.container
